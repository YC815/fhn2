// prisma/schema.prisma

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
  relationMode = "prisma"
}

/// 圖片表：一張新聞可有多張圖，一張圖屬於（可選）一則新聞
model Image {
  id        String   @id @default(cuid())
  url       String
  path      String
  newsId    String? // 外鍵
  news      News?    @relation(fields: [newsId], references: [id])
  createdAt DateTime @default(now())
}

/// 新聞表
model News {
  id          String   @id @default(cuid())
  homeTitle   String
  title       String
  subtitle    String?
  contentMD   String
  contentHTML String
  coverImage  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  showOnHome  Boolean  @default(false) // 是否在主頁顯示，預設為否

  // 圖片（一對多）
  images Image[]

  // 標籤（多對多，隱式關聯表由 Prisma 自動建立）
  tags Tag[]

  // 參考資料（一對多）
  references Reference[]
}

/// 標籤表
model Tag {
  id   String @id @default(cuid())
  name String @unique

  // 多對多
  news News[]
}

/// 用戶表
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

/// 用戶角色枚舉
enum UserRole {
  USER // 普通用戶
  EDITOR // 編輯
  ADMIN // 管理員
}

/// 參考資料表
model Reference {
  id        String   @id @default(cuid())
  url       String
  title     String?
  newsId    String
  news      News     @relation(fields: [newsId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
